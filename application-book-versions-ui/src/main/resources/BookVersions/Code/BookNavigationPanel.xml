      <content>{{velocity}}
#set ($bookRef = $services.bookversions.getVersionedCollectionReference($doc.getDocumentReference()))
#if ("$!bookRef" != '')
  ## Get book title
  #set ($bookDoc = $xwiki.getDocument($bookRef))
  #set ($bookTitle = $bookDoc.title)
  ## Get currently selected version
  #set ($selectedVersion = $services.bookversions.getSelectedVersion($bookRef))
  ## Create panel header
  #navigationPanelHeader("&lt;a href=$bookDoc.getURL()&gt;$bookTitle&lt;/a&gt;")
  ## Prepare the openTo parameter to highlight current page
  #set ($openToDoc = $doc.documentReference.toString().replaceAll('([~"])', '~$1'))
  ## Display the document tree
  {{documentTree
    root="document:$bookRef"
    openTo="document:$openToDoc"
    showTranslations="false"
    showAttachments="false"
    limit="50"
    filterHiddenDocuments="true"
  /}}
  #panelfooter()
#end
{{/velocity}}</content>
